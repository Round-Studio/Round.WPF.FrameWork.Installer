        <Button x:Name="Next1" Content="完成" Margin="0,0,10,10" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="65" Click="Next1_Click"/>
        <CheckBox x:Name="RunCh" Content="运行 {InstallerTitle}" Margin="14,78,10,0" Height="25" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment" IsChecked="True"/>
        <Label Content="感谢使用 由 Minecraft一角钱 制作的安装包打包工具" Margin="10,0,80,5" VerticalAlignment="Bottom" FontSize="10" Height="25" d:LayoutOverrides="HorizontalAlignment"/>

